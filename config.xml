<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "org.nyandevid.coba"
    versionCode = "2"
    version     = "0.0.2" >

  <name>Referral</name>

  <description>
      Coba
  </description>

  <author href="https://facebook.com/ryan.hac" email="ryandevstudio@gmail.com">
      Ryan Aunur Rassyid
  </author>
  
  <preference name="permissions" value="none"/>
  <preference name='pgb-builder-version' value='2' />
  <preference name="phonegap-version"  value="cli-8.0.0" />
  <preference name="android-build-tool" value="gradle" />

  <!-- Plugins -->
  <plugin name="cordova-plugin-whitelist" source="npm"/>
  <plugin name="cordova-plugin-extension" source="npm" />
  <plugin name="cordova-plugin-device" spec="2.0.0"/>
  <plugin spec="https://github.com/8zrealestate/android-referrer-plugin" source="git"/>
  <plugin spec="https://github.com/apla/me.apla.cordova.app-preferences" source="git"/>

  <access origin="*"/>

  <platform name="android">
      <preference name="android-minSdkVersion" value="19" /> <!-- Kitkat -->
  </platform>

  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />


</widget>